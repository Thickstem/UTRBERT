{
	"version": 1,
	"formatters": {
	  "detailed": {
		"class": "logging.Formatter",
		"format": "%(asctime)s %(name)-15s %(levelname)-13s %(message)s",
		"datefmt": "%Y-%m-%d %H:%M:%S"
	  }
	},
	"handlers": {
	  "console": {
		"class": "logging.StreamHandler",
		"level": "DEBUG",
		"formatter": "detailed"
	  },
	  "file": {
		"class": "logging.FileHandler",
		"filename": "log/mplog.log",
		"mode": "a",
		"formatter": "detailed"
	  }
	},
	"loggers": {
	  "console": {
		"handlers": ["console"]
	  }
	},
	"root": {
	  "level": "DEBUG",
	  "handlers": ["console", "file"]
	}
  }
